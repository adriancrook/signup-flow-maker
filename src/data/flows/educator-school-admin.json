{
  "id": "educator-school-admin",
  "name": "Educator School Admin Flow",
  "description": "Signup flow for school administrators who manage a school building",
  "category": "educator",
  "targetPortal": "teacher",
  "entryScreenId": "social-proof",
  "variables": [
    { "id": "role", "name": "User Role", "type": "string", "defaultValue": "school-admin" },
    { "id": "state", "name": "State", "type": "string" },
    { "id": "studentCount", "name": "Student Count", "type": "string" },
    { "id": "rosteringMethod", "name": "Rostering Method", "type": "string" },
    { "id": "environmentConcern", "name": "Environment Concern", "type": "string" },
    { "id": "dataRetention", "name": "Data Retention", "type": "string" },
    { "id": "needsAnalytics", "name": "Needs Analytics", "type": "boolean" },
    { "id": "isDualRole", "name": "Is Dual Role", "type": "boolean" },
    { "id": "teacherContentNeeds", "name": "Teacher Content Needs", "type": "string" },
    { "id": "teacherAccessibility", "name": "Teacher Accessibility", "type": "boolean" },
    { "id": "discovery", "name": "Discovery Source", "type": "string" }
  ],
  "screens": [
    {
      "id": "social-proof",
      "type": "social-proof",
      "title": "Social Proof",
      "variants": {
        "school-admin": {
          "headline": "Great choice!",
          "copy": "You are joining thousands of schools and 50 million users who trust Typing.com."
        }
      },
      "defaultVariant": "school-admin",
      "roleVariable": "role",
      "nextScreenId": "confirm-location"
    },
    {
      "id": "confirm-location",
      "type": "confirm-location",
      "title": "Confirm Location",
      "question": "We detected you're in [state]. Is this correct?",
      "detectedStateVariable": "state",
      "confirmationMessage": "Great. We'll align your curriculum to [state] standards.",
      "variableBinding": "state",
      "nextScreenId": "confirm-location-affirmation"
    },
    {
      "id": "confirm-location-affirmation",
      "type": "social-proof",
      "title": "Standards Alignment",
      "variants": {
        "default": {
          "headline": "Great!",
          "copy": "We'll align your curriculum to [state] standards."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "school-size"
    },
    {
      "id": "school-size",
      "type": "question",
      "title": "School Size",
      "question": "Approximately how many students will be using the program?",
      "options": [
        { "id": "1-100", "label": "1-100 students" },
        { "id": "101-300", "label": "101-300 students" },
        { "id": "301-500", "label": "301-500 students" },
        { "id": "501-1000", "label": "501-1000 students" },
        { "id": "1000+", "label": "1000+ students" }
      ],
      "variableBinding": "studentCount",
      "nextScreenId": "school-size-affirmation"
    },
    {
      "id": "school-size-affirmation",
      "type": "social-proof",
      "title": "Scalability",
      "variants": {
        "default": {
          "headline": "Built to scale!",
          "copy": "Our platform is optimized to handle high-volume traffic for schools your size."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "rostering"
    },
    {
      "id": "rostering",
      "type": "branch",
      "title": "Rostering",
      "question": "How does your school manage student data?",
      "options": [
        { "id": "clever-sync", "label": "Clever Secure Sync" },
        { "id": "clever-library", "label": "Clever Library" },
        { "id": "classlink", "label": "ClassLink" },
        { "id": "google-ms", "label": "Google/Microsoft" },
        { "id": "csv", "label": "CSV Upload" },
        { "id": "unknown", "label": "I don't know yet" }
      ],
      "variableBinding": "rosteringMethod",
      "branches": [
        {
          "id": "sso-clever",
          "conditions": [{ "variable": "rosteringMethod", "operator": "equals", "value": "clever-sync" }],
          "targetScreenId": "sso-handoff",
          "label": "Clever Sync"
        },
        {
          "id": "sso-classlink",
          "conditions": [{ "variable": "rosteringMethod", "operator": "equals", "value": "classlink" }],
          "targetScreenId": "sso-handoff",
          "label": "ClassLink"
        }
      ],
      "defaultNextScreenId": "rostering-affirmation",
      "nextScreenId": "rostering-affirmation"
    },
    {
      "id": "rostering-affirmation",
      "type": "social-proof",
      "title": "Infrastructure",
      "variants": {
        "default": {
          "headline": "Instant deployment!",
          "copy": "We support Single Sign-On (SSO) to make school-wide deployment instant."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "environment"
    },
    {
      "id": "environment",
      "type": "question",
      "title": "Environment",
      "question": "What is your primary concern regarding free software in schools?",
      "options": [
        { "id": "ads", "label": "Inappropriate Ads" },
        { "id": "links", "label": "External Links/Distractions" },
        { "id": "privacy", "label": "Data Privacy" },
        { "id": "none", "label": "None" }
      ],
      "variableBinding": "environmentConcern",
      "nextScreenId": "environment-affirmation"
    },
    {
      "id": "environment-affirmation",
      "type": "social-proof",
      "title": "The Walled Garden",
      "variants": {
        "default": {
          "headline": "We hear you!",
          "copy": "That's why PLUS creates a 100% Ad-Free, Walled Garden environment to minimize risk."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "reporting"
    },
    {
      "id": "reporting",
      "type": "question",
      "title": "Reporting",
      "question": "Do you need to track student growth year-over-year?",
      "options": [
        { "id": "yes", "label": "Yes, I need history" },
        { "id": "no", "label": "No, current year only" }
      ],
      "variableBinding": "dataRetention",
      "nextScreenId": "reporting-affirmation"
    },
    {
      "id": "reporting-affirmation",
      "type": "social-proof",
      "title": "Unlimited History",
      "variants": {
        "default": {
          "headline": "Noted!",
          "copy": "We will enable Unlimited Data Retention for your account (removing the standard 70-day limit)."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "analytics"
    },
    {
      "id": "analytics",
      "type": "question",
      "title": "Analytics",
      "question": "Do you need to report on usage and ROI to leadership?",
      "options": [
        { "id": "yes", "label": "Yes" },
        { "id": "no", "label": "No" }
      ],
      "variableBinding": "needsAnalytics",
      "nextScreenId": "analytics-affirmation"
    },
    {
      "id": "analytics-affirmation",
      "type": "social-proof",
      "title": "Admin Console",
      "variants": {
        "default": {
          "headline": "Data-driven decisions!",
          "copy": "Our Admin Console provides school-wide analytics to prove utilization and ROI."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "dual-role"
    },
    {
      "id": "dual-role",
      "type": "branch",
      "title": "Dual Role Verification",
      "question": "In addition to your administrative duties, do you teach any classes of your own?",
      "options": [
        { "id": "yes", "label": "Yes" },
        { "id": "no", "label": "No" }
      ],
      "variableBinding": "isDualRole",
      "branches": [
        {
          "id": "dual-role-yes",
          "conditions": [{ "variable": "isDualRole", "operator": "equals", "value": "yes" }],
          "targetScreenId": "dual-role-affirmation",
          "label": "Yes - Teaches"
        }
      ],
      "defaultNextScreenId": "discovery",
      "nextScreenId": "discovery"
    },
    {
      "id": "dual-role-affirmation",
      "type": "social-proof",
      "title": "Role Switcher",
      "variants": {
        "default": {
          "headline": "Perfect!",
          "copy": "You won't need two accounts. Our Role Switcher lets you toggle instantly between 'School Oversight' and 'Classroom Instruction' with one click."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "teacher-content-needs"
    },
    {
      "id": "teacher-content-needs",
      "type": "question",
      "title": "Teacher Content Needs",
      "question": "For your own students, are you looking to teach skills beyond basic typing?",
      "options": [
        { "id": "coding", "label": "Coding Basics" },
        { "id": "citizenship", "label": "Digital Citizenship" },
        { "id": "typing", "label": "Just Typing" }
      ],
      "variableBinding": "teacherContentNeeds",
      "nextScreenId": "teacher-content-affirmation"
    },
    {
      "id": "teacher-content-affirmation",
      "type": "social-proof",
      "title": "Dual Access",
      "variants": {
        "default": {
          "headline": "Full access!",
          "copy": "Your account includes full access to the PLUS Curriculum for your students, while maintaining admin privileges for the school."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "teacher-accessibility"
    },
    {
      "id": "teacher-accessibility",
      "type": "question",
      "title": "Teacher Accessibility",
      "question": "Do the students in your specific classes need accessibility accommodations?",
      "options": [
        { "id": "yes", "label": "Yes, I have specific needs" },
        { "id": "no", "label": "No, standard is fine" }
      ],
      "variableBinding": "teacherAccessibility",
      "nextScreenId": "teacher-accessibility-affirmation"
    },
    {
      "id": "teacher-accessibility-affirmation",
      "type": "social-proof",
      "title": "Granular Control",
      "variants": {
        "default": {
          "headline": "We've got you covered!",
          "copy": "You can apply specific accessibility settings to your own roster without altering the global settings for the rest of the school."
        }
      },
      "defaultVariant": "default",
      "nextScreenId": "discovery"
    },
    {
      "id": "discovery",
      "type": "question",
      "title": "Discovery",
      "question": "How did you hear about Typing.com?",
      "options": [
        { "id": "colleague", "label": "Colleague" },
        { "id": "conference", "label": "Conference/PD" },
        { "id": "social", "label": "Social Media" },
        { "id": "search", "label": "Search Engine" },
        { "id": "district", "label": "District Recommendation" }
      ],
      "variableBinding": "discovery",
      "nextScreenId": "plan-analysis"
    },
    {
      "id": "plan-analysis",
      "type": "interstitial",
      "title": "Plan Analysis",
      "headline": "Building Your School Plan",
      "animation": "progress-bar",
      "duration": 5000,
      "messages": [
        { "text": "Scaling for [studentCount] students...", "delay": 0 },
        { "text": "Configuring [rosteringMethod] integration...", "delay": 700 },
        { "text": "Securing [environmentConcern] protection...", "delay": 1400 },
        { "text": "Enabling [dataRetention] data history...", "delay": 2100 },
        { "text": "Calibrating analytics reporting dashboard...", "delay": 2800 },
        { "text": "Configuring Role Switcher...", "delay": 3500 },
        { "text": "Generating quote for [studentCount] licenses...", "delay": 4200 }
      ],
      "nextScreenId": "account-creation"
    },
    {
      "id": "account-creation",
      "type": "account-creation",
      "title": "Account Creation",
      "headline": "Secure Your School's Learning Environment.",
      "copy": "Create an account to save your school's data configuration and view your Ad-Free quote.",
      "collectFields": ["email", "password"],
      "showSocialLogin": true,
      "socialProviders": ["google", "microsoft"],
      "nextScreenId": "paywall"
    },
    {
      "id": "paywall",
      "type": "paywall",
      "title": "School PLUS Quote",
      "headline": "Your School's Ad-Free Quote",
      "valuePropositions": [
        "100% Ad-Free, Walled Garden environment",
        "Unlimited Data Retention",
        "School-wide SSO deployment"
      ],
      "primaryAction": {
        "label": "Request Quote",
        "nextScreenId": null
      },
      "secondaryAction": {
        "label": "Continue with Free",
        "nextScreenId": null
      }
    },
    {
      "id": "sso-handoff",
      "type": "sso-handoff",
      "title": "SSO Handoff",
      "headline": "Great!",
      "copy": "Since your school uses [rosteringMethod], your account setup is managed thereâ€”not here. Ask your IT administrator to add Typing.com in your [rosteringMethod] dashboard. Once added, you and your students can log in instantly using your existing school credentials.",
      "providerVariable": "rosteringMethod",
      "actionLabel": "Got it"
    }
  ]
}
